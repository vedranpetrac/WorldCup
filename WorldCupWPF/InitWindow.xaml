<Window x:Class="WorldCupWPF.InitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF"
        mc:Ignorable="d"
        Title="InitWindow" Height="300" Width="400" WindowStyle="None"
        Loaded="Window_Loaded"
        >
    <StackPanel Margin="10" MaxWidth="250" VerticalAlignment="Center">
        <Label Margin="10,0">Gender</Label>
        <ComboBox x:Name="cbGenderType" Margin="10" SelectionChanged="cbGenderType_SelectionChanged">
        </ComboBox>
        <Label Margin="10,0" Content="Language"/>
        <ComboBox Margin="10" x:Name="cbLanguage" SelectionChanged="cbLanguage_SelectionChanged">
        </ComboBox>
        <Label Margin="10,0">Resolution</Label>
        <ComboBox Margin="10" x:Name="cbResolution" SelectionChanged="cbResolution_SelectionChanged">
            
        </ComboBox>
        <WrapPanel Margin="15" HorizontalAlignment="Center">
            <Button Name="btnCancel"  Margin="0,0,20,0" Width="55">Exit</Button>
            <Button Name="btnConfirm" Click="btnConfirm_Click"  Width="85">Confirm</Button>
        </WrapPanel>
    </StackPanel>
</Window>

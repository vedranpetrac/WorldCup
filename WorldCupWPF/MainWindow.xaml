<Window x:Class="WorldCupWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>
		<Menu VerticalAlignment="Top">
			<Button Name="Options" Content="Options"  Uid="btnOptions"/>
			<Button Name="Exit" Content="Exit"   Uid="btnExit"/>

		</Menu>
		
		<TabControl VerticalAlignment="Center" >
			<TabItem Header="TabItem">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
			<TabItem Header="TabItem" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="58">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>

		

	</StackPanel>
</Window>
